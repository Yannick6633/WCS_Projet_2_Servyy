{%  extends 'layout.html.twig' %}

{% block title %}Formulaire d'inscription{% endblock %}

{% block content %}

    <div class="inscription-form">
        <div class="main-page">
            <p>Merci de remplir le formulaire suivant pour créer votre compte ! </p>

            <h4><strong>{{ valide }}</strong></h4>
            <form action="" method="post">
                <fieldset><h3>Mes informations personnelles</h3>
                    <form class="service-detail ">
                        <div class="form-group">
                            <label for="firstname">Prénom</label>
                            <input type="text" class="form-control" id="firstname" name="firstname"
                                   placeholder="Votre prénom" value="{{ post.firstname }}" required>
                            <div class="error">{{ errors.firstname }}</div>
                        </div>
                        <div class="form-group">
                            <label for="lastname">Nom</label>
                            <input type="text" class="form-control" id="lastname" name="lastname"
                                   placeholder="Votre nom" value="{{ post.lastname }}" required>
                            <div class="error">{{ errors.lastname }}</div>
                        </div>
                        <div class="form-group">
                            <label for="email">Adresse email</label>
                            <input type="email" class="form-control" id="email" name="email"
                                   placeholder="nom@exemple.com" value="{{ post.email }}" required>
                            <div class="error">{{ errors.email }}</div>
                            <div class="error">{{ errors.email2 }}</div>
                            <div class="error">{{ errors.email3 }}</div>
                        </div>
                        <div class="form-group">
                            <label for="phone">Téléphone</label>
                            <input type="text" class="form-control" id="phone" name="phone"
                                   placeholder="Votre numéro de téléphone" value="{{ post.phone }}">
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="1" id="defaultCheck1"
                                   name="visibility">
                            <label class="form-check-label" for="defaultCheck1">
                                J'autorise à afficher mon numéro de téléphone
                            </label>
                        </div>

                        <div class="form-group">
                            <label for="city">Code Postal</label>
                            <input type="text" class="form-control" id="zipcode" name="zipcode"
                                   placeholder="Où habitez-vous?" value="{{ post.zipcode }}">
                            <div class="error">{{ errors.zipcode }}</div>
                            <div class="error">{{ errors.zipcode2 }}</div>
                        </div>

                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" class="form-control" id="password" name="password"
                                   placeholder="Mot de passe" required>
                            <div class="error"></div>
                        </div>

                        <div class="form-group">
                            <label>Les services que je propose</label>
                        </div>
                        <div class="service-detail-gn">
                            <div class="row mx-auto service-detail">
                                {% for service in services %}
                                <div class="col-3 form-check">
                                    <input class="form-check-input" type="checkbox" name="services[]"
                                           value="{{ service.id }}" id="{{ service.id }}">
                                    <label class="form-check-label" for="{{ service.id }}">
                                        {{ service.label }}
                                    </label>
                                </div>
                                {% endfor %}
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">Description</label>
                            <textarea class="form-control" id="description" name="description"
                                      rows="6">{{ post.description }}</textarea>
                        </div>
                        <button type="submit" class="btn btn-blue">Je m'inscris</button>
                    </form>

                </fieldset>

            </form>
        </div>

    </div>

{% endblock %}
