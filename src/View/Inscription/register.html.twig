{%  extends 'layout.html.twig' %}

{% block title %}Formulaire d'inscription{% endblock %}

{% block content %}

    <div class="inscription-form">
        <div class="main-page">
            <p>Merci de remplir le formulaire suivant pour créer votre compte ! </p>

            <h4><strong>{{ valide }}</strong></h4>
            <form action="" method="post">
                <fieldset><h3>Mes informations personnelles</h3>
                    <form class="service-detail ">
                        <div class="form-group">
                            <label for="firstname">Prénom</label>
                            <input type="text" class="form-control" id="firstname" name="firstname"
                                   placeholder="Votre prénom" value="{{ post.firstname }}" required>
                            <div class="error">{{ errors.firstname }}</div>
                        </div>
                        <div class="form-group">
                            <label for="lastname">Nom</label>
                            <input type="text" class="form-control" id="lastname" name="lastname"
                                   placeholder="Votre nom" value="{{ post.lastname }}" required>
                            <div class="error">{{ errors.lastname }}</div>
                        </div>
                        <div class="form-group">
                            <label for="email">Adresse email</label>
                            <input type="email" class="form-control" id="email" name="email"
                                   placeholder="nom@exemple.com" value="{{ post.email }}" required>
                            <div class="error">{{ errors.email }}</div>
                            <div class="error">{{ errors.email2 }}</div>
                            <div class="error">{{ errors.email3 }}</div>
                        </div>
                        <div class="form-group">
                            <label for="phone">Téléphone</label>
                            <input type="text" class="form-control" id="phone" name="phone"
                                   placeholder="Votre numéro de téléphone" value="{{ post.phone }}">
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="1" id="defaultCheck1"
                                   name="visibility">
                            <label class="form-check-label" for="defaultCheck1">
                                J'autorise à afficher mon numéro de téléphone
                            </label>
                        </div>

                        <div class="form-group">
                            <label for="city">Code Postal</label>
                            <input type="text" class="form-control" id="zipcode" name="zipcode"
                                   placeholder="Où habitez-vous?" value="{{ post.zipcode }}">
                            <div class="error">{{ errors.zipcode }}</div>
                            <div class="error">{{ errors.zipcode2 }}</div>
                        </div>

                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" class="form-control" id="password" name="password"
                                   placeholder="Mot de passe" required>
                            <div class="error"></div>
                        </div>

                        <div class="form-group">
                            <label>Les services que je propose</label>
                        </div>
                        <div class="service-detail-gn">
                            <div class="service-detail">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="services[]" value="2" id="jardinage">
                                    <label class="form-check-label" for="jardinage">
                                        Jardinage
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="services[]" value="1" id="bricolage">
                                    <label class="form-check-label" for="bricolage">
                                        Bricolage
                                    </label>
                                </div>
                            </div>
                            <div class="service-detail">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="services[]" value="3" id="demenagement">
                                    <label class="form-check-label" for="demenagement">
                                        Déménagement
                                    </label>
                                </div>

                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="services[]" value="4" id="entretien">
                                    <label class="form-check-label" for="entretien">
                                        Entretien-Réparation
                                    </label>
                                </div>
                            </div>
                            <div class="service-detail">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="services[]" value="5" id="cours">
                                    <label class="form-check-label" for="cours">
                                        Cours
                                    </label>
                                </div>

                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="services[]" value="6" id="gardedanimaux">
                                    <label class="form-check-label" for="gardedanimaux">
                                        Garde d'animaux
                                    </label>
                                </div>
                            </div>

                            <div class="service-detail">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="services[]" value="7" id="gardeenfant">
                                    <label class="form-check-label" for="gardeenfant">
                                        Garde d'enfants
                                    </label>
                                </div>

                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="services[]" value="8" id="services">
                                    <label class="form-check-label" for="services">
                                        Service à la personne
                                    </label>
                                </div>

                            </div>
                            <div class="service-detail">

                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="services[]" value="9" id="plomberie">
                                    <label class="form-check-label" for="plomberie">
                                        Plomberie
                                    </label>
                                </div>

                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="services[]" value="10" id="electricien">
                                    <label class="form-check-label" for="electricien">
                                        Electricien
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">Description</label>
                            <textarea class="form-control" id="description" name="description"
                                      rows="6">{{ post.description }}</textarea>
                        </div>
                        <button type="submit" class="btn btn-blue">Je m'inscris</button>
                    </form>

                </fieldset>

            </form>
        </div>

    </div>

{% endblock %}
